<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controleur.PopupDefaiteControleur"
      fx:id="popupRoot"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: -color-4; -fx-border-color: -color-1; -fx-border-width: 3px; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-effect: dropshadow(one-pass-box, -color-1, 0, 0, 6px, 6px);"
      stylesheets="styles/styles.css"
      prefWidth="450"
      maxWidth="450"
      onKeyPressed="#handleKeyPress">

    <padding>
        <Insets bottom="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER"
          style="-fx-background-color: red; -fx-background-radius: 8px 8px 0 0; -fx-padding: 20px;">
        <Label text="Défaite !"
               style="-fx-text-fill: -color-6; -fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Contenu -->
    <VBox alignment="CENTER" spacing="15">
        <padding>
            <Insets top="10" right="30" bottom="10" left="30"/>
        </padding>

        <Label text="Dommage ! Vous avez ateint le nombre de déplacement maximum" wrapText="true" alignment="CENTER" textAlignment="CENTER"
               style="-fx-text-fill: -color-1; -fx-font-size: 16px; -fx-font-weight: 600;"/>

        <!-- Séparateur -->
        <Separator style="-fx-background-color: -color-2;"/>

        <!-- Chrono -->
        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="messageLabel" wrapText="true" textAlignment="CENTER"
                   style="-fx-text-fill: -color-1; -fx-font-size: 14px;"
                   managed="false" visible="false"
            />
            <Label fx:id="deplacementLabel" style="-fx-text-fill: -color-1; -fx-font-size: 18px; -fx-font-weight: bold;"
                   managed="false" visible="false"/>
        </VBox>

        <!-- Séparateur -->
        <Separator style="-fx-background-color: -color-2;"/>
    </VBox>

    <!-- Boutons -->
    <HBox alignment="CENTER" spacing="15">
        <padding>
            <Insets top="10" right="30" left="30"/>
        </padding>
        <Button text="Menu principal" onAction="#retourMenu" styleClass="button-outlined" prefWidth="150"/>
        <Button text="Continuer" onAction="#rejouer" styleClass="button-filled" prefWidth="150"/>
    </HBox>
</VBox>


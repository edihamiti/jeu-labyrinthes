<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controleur.JeuControleur"
      spacing="20"
      style="-fx-background-color: -color-1"
      stylesheets="styles/toucheDeJeu.css ,styles/styles.css">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <VBox alignment="CENTER">
        <!--Titre-->
        <Label text="Jeu" styleClass="title"/>
        <!--Bouton retour Menu-->
        <Button text="Retour au menu" onAction="#retourMenu" styleClass="button-ghost"/>
    </VBox>

    <!-- Spacer -->
    <HBox HBox.hgrow="ALWAYS"/>

    <VBox alignment="CENTER" spacing="40">
        <!--Canvas avec le labyrinthe-->
        <HBox alignment="TOP_CENTER">
            <VBox fx:id="contienLabyrinthe" alignment="CENTER" style="-fx-background-color: -color-1"/>
        </HBox>

        <!--touche-->
        <VBox alignment="CENTER" spacing="5">
            <Button text="↑" styleClass="touche-clavier" onAction="#deplacerHaut"/>
            <HBox alignment="CENTER" spacing="5">
                <Button text="←" styleClass="touche-clavier" onAction="#deplacerGauche"/>
                <Button text="↓" styleClass="touche-clavier" onAction="#deplacerBas"/>
                <Button text="→" styleClass="touche-clavier" onAction="#deplacerDroite"/>
            </HBox>
        </VBox>
    </VBox>

    <!-- Spacer -->
    <HBox HBox.hgrow="ALWAYS"/>

    <VBox alignment="TOP_CENTER" spacing="20">
        <!-- Minimap -->
        <VBox fx:id="overlayMinimap" spacing="5">
            <VBox fx:id="minimap" alignment="CENTER"
                  style="-fx-background-color: -color-1; -fx-border-color: #cccccc; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 5 5 5 5"/>
            <Label text="Minimap" styleClass="subtitle"/>
        </VBox>
    </VBox>

</HBox>
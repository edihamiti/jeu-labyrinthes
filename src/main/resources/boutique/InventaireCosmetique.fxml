<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="boutique.controleur.ControleurCasier"
      spacing="20"
      alignment="TOP_CENTER"
      stylesheets="@boutique.css">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <ScrollPane styleClass="boutique-content" fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox spacing="40" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER" spacing="30" maxWidth="Infinity">
                <Button text="← Retour" onAction="#fermeInventaire"
                        styleClass="button-outlined"/>

                <Region HBox.hgrow="ALWAYS"/>

                <VBox alignment="TOP_CENTER" spacing="5">
                    <Label text="MON CASIER" styleClass="title"/>
                    <Label text="Cliquez sur un cosmétique pour l'équiper"
                           styleClass="subtitle"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>
                <HBox prefWidth="150"/>
            </HBox>

            <Separator/>

            <!-- Content -->
            <VBox fx:id="possedeContaineur" spacing="15" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                <!-- Massage si pas de cosmétique -->
                <Label fx:id="labelVide"
                       text="Vous ne possédez aucun cosmétique pour le moment.&#10;Rendez-vous dans la boutique !"
                       styleClass="empty-message" wrapText="true"
                       textAlignment="CENTER"/>
                <!-- Tous les cosmétiques ajoutés dynamiquement -->
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="boutique.controleur.ControleurBoutique"
      spacing="20"
      alignment="TOP_CENTER"
      stylesheets="@boutique.css">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <ScrollPane styleClass="boutique-content" fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox spacing="40" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER" spacing="30" maxWidth="Infinity">
                <Button text="← Retour" onAction="#fermerBoutique"
                        styleClass="button-outlined"/>

                <Region HBox.hgrow="ALWAYS"/>

                <VBox alignment="TOP_CENTER" spacing="5">
                    <Label text="BOUTIQUE" styleClass="title"/>
                    <Label text="Achetez des cosmétiques avec vos points"
                           styleClass="subtitle"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <VBox alignment="CENTER_RIGHT" spacing="5">
                    <Label text="Vos points :" styleClass="score-label"/>
                    <Label fx:id="labelScore" text="0" styleClass="score-value"/>
                </VBox>
            </HBox>

            <Separator/>

            <ScrollPane fitToHeight="true" styleClass="scroll-pane" hbarPolicy="ALWAYS" vbarPolicy="NEVER"
                        VBox.vgrow="ALWAYS">
                <HBox fx:id="conteneurCosmetiques" spacing="20" alignment="CENTER_LEFT"
                      styleClass="cosmetics-container">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </HBox>
            </ScrollPane>
        </VBox>
    </ScrollPane>
</VBox>
